#
# https://github.com/everbot/dotfiles
# bspwm hotkeys
#

# kill all active background programs that we started earlier
    # killall trayer \
    # killall nm-applet \
    # killall panel.sh \
    # killall panel_bar \
    # bspc quit
#killall trayer && killall nm-applet && killall panel.sh && killall bar && bspc quit
super + alt + Escape
    killall trayer; \
    killall nm-applet; \
    killall panel.sh; \
    killall panel_bar; \
    killall bar; \
    bspc quit;


# closing a window, close
super + w
    bspc node -c

super + t
    bspc desktop -l next

super + b
    bspc desktop -B

# switch between floating/fullscreen of the current focused window
# super + {s,f}
#   bspc window -t {floating,fullscreen}

# The below 1 liner doesn't work, because of the pair '' quote?
# bspc query --windows --desktop | xargs -n1 -I '{}' bspc window {} -t floating=on
# get all windows under the current desktop and then toggle floating
super + s
    ws=$(bspc query --windows --desktop); \
    while read l; do bspc window $l -t {floating}; done <<< $ws

# switch between the current desktop and the previous desktop
super + {grave,Tab}
    bspc {window,desktop} -f last

super + apostrophe
    bspc window -s last

super + {o,i}
    bspc control --record-history off; \
    bspc window {older,newer} -f; \
    bspc control --record-history on

super + y
    bspc window -w last.manual

# swap the position of the current window with the biggest window in the current
# desktop view
super + m
    bspc node -s biggest

# moving window around in the current desktop view
# 0.9:   bspc window -{f,s} {left,down,up,right}
super + {_,shift + }{h,j,k,l}
    bspc node -{f,s} {west,south,north,east}

# move the current window to desktop number
#bspc {desktop -f, window -d} $(bspc query -M -m)/{1-9,10}
# 0.9:   bspc {desktop -f,window -d} ^{1-9,10}
super + {_,shift + }{1-9,0}
    bspc {desktop -f,node -d} ^{1-9,10}

# rotate focusing each window in the current desktop view
# super + {_,shift + }c
# 0.9:   bspc window -f {next,prev}
alt + Tab
    bspc node -f {next,prev}

# circulate the leaves of the tree of the selected desktop
super + {comma,period}
    bspc desktop -C {backward,forward}

# go to the next/previous desktop
super + bracket{left,right}
    bspc desktop -f {prev,next}

super + ctrl + {h,j,k,l}
    bspc window -p {left,down,up,right}

super + ctrl + {_,shift + }space
    bspc {window -p cancel,desktop -c}

# resize the current focused window
# 0.9:    bspc window -e {left -10,down +10,up -10,right +10}
super + alt + {h,j,k,l}
    bspc node {@west -r -10,@south -r +10,@north -r -10,@east -r +10}

# resize the current focused window in reversed direction
# 0.9:    bspc window -e {right -10,up +10,down -10,left +10}
super + alt + shift + {h,j,k,l}
    bspc node {@east -r -10,@north -r +10,@south -r -10,@west -r +10}

# rotate view of the current desktop
super + r
    bspc desktop -R 90

super + ctrl + {1-9}
    bspc window -r 0.{1-9}


~button1
    bspc pointer -g focus

super + button{1-3}
    bspc pointer -g {move,resize_side,resize_corner}

super + !button{1-3}
    bspc pointer -t %i %i

super + @button{1-3}
    bspc pointer -u




#*******************************************************************************
# MONITOR handling
#*******************************************************************************

# switch to another monitor
super + {Left,Right}
    bspc monitor -f {next,prev}

# move the current window to next monitor
super + {_,shift + }{Left,Right}
    bspc {monitor -f,window -m} {next,prev}

# use super + alt + number to switch to a desktop [number] in an external
